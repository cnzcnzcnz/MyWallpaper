<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/labelDisclaimer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="DISCLAIMER"
        android:gravity="center"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        android:background="@color/colorBgHeaderDialogDisclaimer"
        android:textColor="@color/colorTextHeaderDisclaimer"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/disclaimer"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:fontFamily="@font/avenir_regular"
        android:textColor="@color/colorTextDisclaimer"
        android:background="@color/colorBgDialogDisclaimer"
        android:textSize="16sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/labelDisclaimer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>